{
    "name": "@purinton/discord",
    "type": "module",
    "version": "1.0.1",
    "description": "A modular, extensible Discord app framework for Node.js with slash command, localization, and event-driven support.",
    "module": "index.mjs",
    "types": "index.d.ts",
    "files": [
        "index.mjs",
        "index.d.ts",
        "README.md",
        "LICENSE",
        "example.mjs",
        "commands/",
        "events/",
        "locales/",
        "src/",
        "tests/"
    ],
    "exports": {
        ".": {
            "import": "./index.mjs",
            "types": "./index.d.ts"
        }
    },
    "scripts": {
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/discord.git"
    },
    "keywords": [
        "discord",
        "discord-app",
        "discordjs",
        "discord-js",
        "discord-app-framework",
        "discord-app-template",
        "slash-commands",
        "localization",
        "i18n",
        "event-driven",
        "nodejs",
        "node",
        "framework",
        "typescript",
        "app",
        "modular",
        "extensible"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/discord/issues"
    },
    "homepage": "https://github.com/purinton/discord#readme",
    "devDependencies": {
        "jest": "^30.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/log": "^1.0.10",
        "@purinton/path": "^1.0.12",
        "discord.js": "^14.20.0",
        "dotenv": "^16.5.0"
    }
}